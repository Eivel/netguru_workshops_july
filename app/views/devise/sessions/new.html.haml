.col-md-3
.col-md-6
  .panel.panel-default
    .panel-heading
      %h3 Sign in
    .panel-body
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .form-group
          = f.label :email
          = f.email_field :email, required: false, autofocus: true, class: 'form-control'
        .form-group
          = f.label :password
          = f.password_field :password, required: false, class: 'form-control'
        .form-group
          = f.label :remember_me
          = f.check_box :remember_me, as: :boolean if devise_mapping.rememberable?
        .form-actions
          = f.button :submit, class: 'btn btn-default btn-sm' do
            %i.glyphicon.glyphicon-log-in
            Log in
          = render "devise/shared/links"
.col-md-3