.col-md-3.col-sm-3
.col-md-6.col-sm-6
  .panel.panel-default
    .panel-heading
      %h3 Forgot your password?
    .panel-body
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        - if resource.errors.any?
          #error_explanation
            %h4= "#{pluralize(resource.errors.count, "error")} prohibited this email from being saved:"
            %ul
              - resource.errors.full_messages.each do |msg|
                %li= msg
        .form-group
          = f.label :email
          = f.text_field :email, required: true, class: 'form-control'
        = f.button :submit, class: 'btn btn-default btn-sm' do
          %i.glyphicon.glyphicon-floppy-disk
          Submit
        .password-recovery-buttons
          = render "devise/shared/links"
.col-md-3.col-sm-3