.col-md-6.col-sm-6
  .panel.panel-default
    .panel-heading
      %h4 Edit category
    .panel-body
      = render 'form'
      .lowered-button
        = link_to category, class: 'btn btn-default btn-xs' do
          %i.glyphicon.glyphicon-list-alt
          Show
        \|
        = link_to categories_path, class: 'btn btn-default btn-xs' do
          %i.glyphicon.glyphicon-backward
          Back
