.col-md-3.col-sm-3
.col-md-6.col-sm-6
  .panel.panel-default
    .panel-heading
      %h3 User profile
    .panel-body
      .row
        .col-md-6.col-sm-6
          #avatar
          = image_tag current_user.avatar.url(:medium)
          .row
            .col-md-12.col-sm-12
              = form_for :user, :html => { :multipart => true } do |form|
                = form.file_field :avatar, class: 'form-control'
                = form.button :submit, class: 'btn btn-default' do
                  %i.glyphicon.glyphicon-floppy-disk
                  Save
                
        .col-md-6.col-sm-6
          %p= "First name: " + current_user.firstname
          %p= "Last name: " + current_user.lastname
          %p= "Email: " + current_user.email
      .row
        .profile-border
      .row
        .col-md-12
          %h3.text-center.profile-review-title Reviews
          
      .row
        - reviews.each do |r|
          .col-md-12.col-sm-12
            %h4= r.product.title
            %p= r.content
            %p Ocena: #{r.rating}
            .review-border
.col-md-3.col-sm-3